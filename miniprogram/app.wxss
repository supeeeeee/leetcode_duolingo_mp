/** app.wxss **/
page {
  --primary-color: #58cc02;
  --secondary-color: #2b70c9;
  --error-color: #ff4b4b;
  --warning-color: #ffc800;
  --text-main: #3c3c3c;
  --text-light: #777777;
  --bg-color: #ffffff;
  --card-bg: #f7f7f7;
  
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
  color: var(--text-main);
  background-color: var(--bg-color);
  box-sizing: border-box;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.btn {
  background-color: var(--primary-color);
  color: white;
  font-weight: bold;
  padding: 24rpx 48rpx;
  border-radius: 24rpx;
  text-align: center;
  box-shadow: 0 4px 0 #46a302; /* 3D effect */
  transition: all 0.1s;
}

.btn:active {
  transform: translateY(4px);
  box-shadow: 0 0 0 #46a302;
}

.btn-secondary {
  background-color: var(--bg-color);
  color: var(--primary-color);
  border: 2px solid #e5e5e5;
  box-shadow: 0 4px 0 #e5e5e5;
}

.btn-secondary:active {
  box-shadow: 0 0 0 #e5e5e5;
}

/* Animations */
@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-10rpx); }
  50% { transform: translateX(10rpx); }
  75% { transform: translateX(-10rpx); }
}

@keyframes pop {
  0% { transform: scale(0.9); opacity: 0; }
  70% { transform: scale(1.05); opacity: 1; }
  100% { transform: scale(1); opacity: 1; }
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.animate-shake {
  animation: shake 0.3s ease-in-out;
}

.animate-pop {
  animation: pop 0.3s ease-out;
}

.animate-fade {
  animation: fadeIn 0.3s ease-in;
}

/* Code Highlighting */
.code-keyword { color: #ff79c6; font-weight: bold; }
.code-string { color: #f1fa8c; }
.code-comment { color: #6272a4; font-style: italic; }
.code-func { color: #50fa7b; }
.code-number { color: #bd93f9; }

/* Ensure rich-text white-space is preserved for code */
rich-text {
  white-space: pre;
}

.card {
  background: var(--bg-color);
  border: 2px solid #e5e5e5;
  border-radius: 24rpx;
  padding: 32rpx;
  margin: 16rpx;
  width: 90%;
  box-sizing: border-box;
}
