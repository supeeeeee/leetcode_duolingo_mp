/* pages/daily/daily.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #fff 0%, #f0f4f8 100%);
}

.result-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
  min-height: 100vh;
  width: 100%;
  box-sizing: border-box;
}

.result-emoji {
  font-size: 140rpx;
  margin-bottom: 30rpx;
  animation: bounce 0.6s ease;
}

.result-title {
  font-size: 52rpx;
  font-weight: 800;
  color: var(--primary-color);
  margin-bottom: 50rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: var(--text-light);
  line-height: 1.5;
  text-align: center;
  margin-bottom: 36rpx;
}

.stats-card {
  width: 100%;
  background: white;
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 40rpx;
  box-sizing: border-box;
}

.stat-row {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-val {
  font-size: 56rpx;
  font-weight: bold;
  color: var(--text-main);
}

.stat-val.xp {
  color: var(--warning-color);
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-light);
  text-transform: uppercase;
  margin-top: 8rpx;
}

.accuracy-ring {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
}

.accuracy-chart {
  width: 200rpx;
  height: 200rpx;
}

.accuracy-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.accuracy-value {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--primary-color);
}

.accuracy-label {
  font-size: 24rpx;
  color: var(--text-light);
}

.bonus-info {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #ffd700, #ffb700);
  padding: 20rpx 32rpx;
  border-radius: 24rpx;
  margin-bottom: 40rpx;
}

.bonus-emoji {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.bonus-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #7a5200;
}

/* Quiz Styles */
.quiz-view {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100%;
  background: white;
  box-sizing: border-box;
}

.quiz-header {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1px solid #f0f0f0;
  width: 100%;
  box-sizing: border-box;
}

.close-btn {
  font-size: 44rpx;
  color: var(--text-light);
  padding: 12rpx;
  margin-right: 16rpx;
  min-width: 72rpx;
  text-align: center;
}

.quiz-progress-bar {
  flex: 1;
  height: 18rpx;
  background: #eaeaea;
  border-radius: 999rpx;
  overflow: hidden;
  margin-right: 16rpx;
}

.quiz-progress-fill {
  height: 100%;
  background: var(--primary-color);
  transition: width 0.25s ease;
  border-radius: 999rpx;
}

.progress-text {
  font-size: 24rpx;
  color: var(--text-light);
  font-weight: 800;
  min-width: 110rpx;
  text-align: right;
}

.question-area {
  padding: 24rpx 40rpx 10rpx;
  flex: 1;
  box-sizing: border-box;
}

.question-header-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 20rpx;
  margin-bottom: 10rpx;
}

.detail-toggle {
  display: flex;
  align-items: center;
  background: #f0f0f0;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.toggle-icon {
  font-size: 28rpx;
  margin-right: 6rpx;
}

.toggle-text {
  font-size: 22rpx;
  font-weight: 800;
  color: #1cb0f6;
}

.description-card {
  background: #f8f9fa;
  border-left: 8rpx solid #1cb0f6;
  padding: 20rpx;
  border-radius: 8rpx;
  margin: 16rpx 0;
}

.description-content {
  font-size: 26rpx;
  color: #4b4b4b;
  line-height: 1.6;
  white-space: pre-wrap;
}

.question-text {
  font-size: 36rpx;
  font-weight: 800;
  color: var(--text-main);
  line-height: 1.5;
}

.code-container {
  margin-top: 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
  border: 2rpx solid #e5e5e5;
}

.lang-selector {
  display: flex;
  background: #f0f0f0;
  padding: 8rpx;
  gap: 8rpx;
}

.lang-tab {
  font-size: 20rpx;
  font-weight: 800;
  color: #777;
  padding: 6rpx 16rpx;
  border-radius: 10rpx;
  text-transform: uppercase;
}

.lang-tab.active {
  background: white;
  color: #1cb0f6;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.code-block {
  background: #2d2d2d;
  color: #f8f8f2;
  padding: 22rpx;
  font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace;
  font-size: 26rpx;
  line-height: 1.6;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
}

.options-area {
  padding: 0 40rpx;
  padding-bottom: 12rpx;
  box-sizing: border-box;
}

.option-card {
  display: flex;
  align-items: center;
  padding: 26rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 20rpx;
  margin-bottom: 18rpx;
  background: #fff;
  transition: transform 0.08s ease, box-shadow 0.08s ease, border-color 0.12s ease;
  box-shadow: 0 2rpx 0 rgba(0,0,0,0.03);
}

.option-card:active {
  transform: scale(0.99);
  box-shadow: 0 1rpx 0 rgba(0,0,0,0.02);
}

.option-card.selected {
  border-color: var(--secondary-color);
  background: #eaf5ff;
}

.option-card.correct {
  border-color: var(--primary-color);
  background: #d7ffb8;
}

.option-card.wrong {
  border-color: var(--error-color);
  background: #ffdfe0;
}

.option-key {
  width: 56rpx;
  height: 56rpx;
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 22rpx;
  font-size: 26rpx;
  font-weight: 800;
  background: #f7f7f7;
  color: var(--text-light);
  border: 2rpx solid #e5e5e5;
}

.option-card.selected .option-key {
  background: var(--secondary-color);
  color: white;
  border-color: var(--secondary-color);
}

.option-text {
  flex: 1;
  font-size: 30rpx;
  color: var(--text-main);
  line-height: 1.4;
}

.footer {
  width: 100%;
  padding: 22rpx 40rpx;
  padding-bottom: calc(22rpx + env(safe-area-inset-bottom));
  background: white;
  border-top: 2rpx solid #f0f0f0;
  box-sizing: border-box;
}

.btn {
  width: 100%;
  padding: 28rpx;
  font-size: 34rpx;
  border-radius: 24rpx;
  font-weight: 800;
  transition: all 0.1s ease;
  box-sizing: border-box;
}

.footer-correct {
  background-color: #d7ffb8;
  border-color: #b8f28b;
}

.footer-wrong {
  background-color: #ffdfe0;
  border-color: #ffc1c1;
}

.feedback-wrap {
  min-height: 140rpx;
}

.feedback-msg {
  margin-bottom: 16rpx;
}

.feedback-title {
  font-size: 34rpx;
  font-weight: 900;
  margin-bottom: 8rpx;
}

.footer-correct .feedback-title {
  color: #2e7d32;
}

.footer-wrong .feedback-title {
  color: var(--error-color);
}

.feedback-desc {
  font-size: 26rpx;
  color: rgba(0,0,0,0.55);
  line-height: 1.4;
  display: block;
}

.thinking-card {
  margin-top: 12rpx;
  padding: 16rpx;
  border-radius: 14rpx;
  background: rgba(255, 255, 255, 0.55);
}

.thinking-item {
  margin-top: 6rpx;
  line-height: 1.4;
}

.thinking-label {
  font-size: 24rpx;
  color: #4b4b4b;
  font-weight: 800;
  display: block;
}

.thinking-value {
  font-size: 24rpx;
  color: rgba(0,0,0,0.65);
}

.template-box {
  background: #2d2d2d;
  color: #f8f8f2;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  margin-top: 10rpx;
  overflow-x: auto;
  border: 1rpx solid rgba(255,255,255,0.1);
}

.template-text {
  font-family: 'Courier New', Courier, monospace;
  font-size: 22rpx;
  line-height: 1.5;
  white-space: pre;
  display: block;
  color: #f1fa8c; /* Make it distinct */
}

.btn {
  width: 100%;
  padding: 28rpx;
  font-size: 34rpx;
  border-radius: 24rpx;
  font-weight: 800;
  transition: all 0.1s ease;
}

.btn:active:not(.disabled) {
  transform: translateY(4rpx);
  box-shadow: none !important;
}

.btn.disabled {
  background: #e5e5e5;
  color: #afafaf;
  box-shadow: none;
}

@keyframes bounce {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.2); }
}
