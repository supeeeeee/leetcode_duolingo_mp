/* pages/home/home.wxss */
.container {
  padding: 0;
  background-color: var(--bg-color);
  min-height: 100vh;
}

.header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 24rpx 40rpx;
  background-color: var(--bg-color);
  border-bottom: 2px solid #e5e5e5;
  box-sizing: border-box;
}

.stat-box {
  display: flex;
  align-items: center;
  font-weight: 800;
  font-size: 32rpx;
}

.emoji {
  margin-right: 12rpx;
  font-size: 44rpx;
}

.stat-value {
  color: #ff9600; /* Streak color */
}

.stat-box:last-child .stat-value {
  color: #1cb0f6; /* XP/Gem color - making it blueish like Duolingo */
}

.hero {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
  margin-bottom: 60rpx;
  padding: 0 40rpx;
}

.mascot {
  font-size: 180rpx;
  margin-bottom: 32rpx;
  animation: bounce 2.5s infinite ease-in-out;
}

.hero-title {
  font-size: 44rpx;
  font-weight: 800;
  color: var(--text-main);
  margin-bottom: 16rpx;
  text-align: center;
}

.hero-subtitle {
  font-size: 32rpx;
  color: var(--text-light);
  font-weight: 500;
  text-align: center;
}

/* Daily Challenge Card */
.daily-challenge-card {
  display: flex;
  align-items: center;
  background: #58cc02;
  border-radius: 32rpx;
  padding: 32rpx 40rpx;
  margin: 0 40rpx 48rpx;
  position: relative;
  box-shadow: 0 8rpx 0 #46a302;
  transition: all 0.1s ease;
  width: calc(100% - 80rpx);
  box-sizing: border-box;
}

.daily-challenge-card:active, .active-state {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 0 #46a302;
}


.challenge-badge {
  position: absolute;
  top: -20rpx;
  right: 40rpx;
  background: #ff4b4b;
  color: white;
  font-size: 24rpx;
  font-weight: 800;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 0 #d33131;
  z-index: 10;
}

.challenge-icon {
  font-size: 72rpx;
  margin-right: 32rpx;
}

.challenge-info {
  flex: 1;
}

.challenge-title {
  font-size: 36rpx;
  font-weight: 800;
  color: white;
  display: block;
}

.challenge-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 4rpx;
  font-weight: 500;
}

.challenge-arrow {
  font-size: 40rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 800;
}

.action-area {
  width: 100%;
  padding: 0 40rpx;
  margin-bottom: 64rpx;
  box-sizing: border-box;
}

.action-row {
  display: flex;
  gap: 16rpx;
}

.today-suggestions {
  width: 100%;
  padding: 0 40rpx;
  margin-bottom: 40rpx;
  box-sizing: border-box;
}

.suggestion-card {
  display: flex;
  flex-direction: column;
  padding: 32rpx;
}

.card-header-row {
  margin-bottom: 24rpx;
}

.stats-pills {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.stat-pill {
  flex: 1;
  background: #f7f7f7;
  border-radius: 20rpx;
  padding: 16rpx 12rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.stat-pill.highlight {
  background: #fff4de;
  border: 1px solid #ffcc00;
}

.pill-num {
  font-size: 32rpx;
  font-weight: 800;
  color: #1b6ef3;
  line-height: 1.2;
}

.stat-pill.highlight .pill-num {
  color: #b54708;
}

.pill-lbl {
  font-size: 22rpx;
  color: #777;
  margin-top: 4rpx;
  font-weight: 500;
}

.divider {
  height: 2rpx;
  background: #f0f0f0;
  margin: 8rpx 0 24rpx;
  width: 100%;
}

/* Recommendation Hero */
.rec-section {
  background: #eef2f8;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border-left: 8rpx solid #1b6ef3;
}

.rec-tag {
  display: inline-block;
  background: #1b6ef3;
  color: white;
  font-size: 20rpx;
  font-weight: 700;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
  text-transform: uppercase;
}

.rec-title {
  display: block;
  font-size: 30rpx;
  font-weight: 700;
  color: #2b3a55;
  margin-bottom: 8rpx;
}

.rec-desc {
  font-size: 24rpx;
  color: #555;
  line-height: 1.4;
}

/* Wrong Review Widget */
.wrong-review-widget {
  display: flex;
  align-items: center;
  background: #fff0f0;
  border: 2rpx solid #ffcccc;
  border-radius: 24rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 24rpx;
  transition: all 0.2s ease;
}

.widget-hover {
  transform: translateY(2rpx);
  background: #ffebeb;
}

.wr-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.wr-info {
  flex: 1;
}

.wr-main {
  display: block;
  font-size: 28rpx;
  font-weight: 700;
  color: #d33131;
}

.wr-sub {
  display: block;
  font-size: 22rpx;
  color: #d33131;
  opacity: 0.8;
}

.wr-arrow {
  font-size: 32rpx;
  color: #d33131;
  font-weight: 800;
}

/* Chapter List Mini */
.chapter-list-mini {
  margin-bottom: 24rpx;
}

.list-label {
  font-size: 24rpx;
  font-weight: 700;
  color: #999;
  margin-bottom: 12rpx;
  display: block;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.mini-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}

.mini-item:last-child {
  border-bottom: none;
}

.mini-title {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
  margin-right: 16rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.mini-tags {
  display: flex;
  gap: 8rpx;
}

.tag {
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
  font-weight: 600;
}

.tag.core {
  background: #eef2f8;
  color: #1b6ef3;
}

.tag.wrong {
  background: #fff4de;
  color: #b54708;
}

/* Action Footer */
.action-footer {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 8rpx;
}

.primary-action-btn {
  width: 100%;
  background: #1b6ef3;
  color: white;
  font-size: 30rpx;
  font-weight: 700;
  border-radius: 24rpx;
  height: 88rpx;
  line-height: 88rpx;
  box-shadow: 0 6rpx 0 #115bc4;
  transition: all 0.1s;
}

.btn-active {
  transform: translateY(4rpx);
  box-shadow: 0 2rpx 0 #115bc4;
}

.sub-actions {
  display: flex;
  gap: 16rpx;
}

.sub-action-btn {
  flex: 1;
  background: white;
  border: 2rpx solid #e5e5e5;
  color: #777;
  font-size: 26rpx;
  font-weight: 600;
  border-radius: 20rpx;
  height: 72rpx;
  line-height: 72rpx;
}

.sub-active {
  background: #f9f9f9;
}

.btn {
  width: 100%;
  font-size: 36rpx;
  font-weight: 800;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.action-row .btn {
  flex: 1;
}

.btn.secondary {
  color: #2b3a55;
  background: #eef2f8;
}

.daily-goals {
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.card {
  background: var(--bg-color);
  border: 4rpx solid #e5e5e5;
  border-bottom: 10rpx solid #e5e5e5;
  border-radius: 32rpx;
  padding: 32rpx;
  width: 100%;
  margin: 0;
  box-sizing: border-box;
}

.card-title {
  font-weight: 800;
  font-size: 36rpx;
  color: var(--text-main);
  display: block;
  margin-bottom: 24rpx;
}

.progress-bar {
  height: 32rpx;
  background-color: #e5e5e5;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #ffc800;
  border-radius: 16rpx;
  transition: width 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.card-desc {
  font-size: 28rpx;
  color: var(--text-light);
  font-weight: 500;
  line-height: 1.4;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}

/* Loading State */
.loading-state {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: white;
  z-index: 1000;
}

.spinner {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid #e5e5e5;
  border-top-color: #58cc02;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}
