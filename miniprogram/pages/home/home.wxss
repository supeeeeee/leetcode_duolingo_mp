/* pages/home/home.wxss */
.container {
  padding: 0;
  background-color: var(--bg-color);
  min-height: 100vh;
}

.header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 24rpx 40rpx;
  background-color: var(--bg-color);
  border-bottom: 2px solid #e5e5e5;
  box-sizing: border-box;
}

.stat-box {
  display: flex;
  align-items: center;
  font-weight: 800;
  font-size: 32rpx;
}

.emoji {
  margin-right: 12rpx;
  font-size: 44rpx;
}

.stat-value {
  color: #ff9600; /* Streak color */
}

.stat-box:last-child .stat-value {
  color: #1cb0f6; /* XP/Gem color - making it blueish like Duolingo */
}

.hero {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
  margin-bottom: 60rpx;
  padding: 0 40rpx;
}

.mascot {
  font-size: 180rpx;
  margin-bottom: 32rpx;
  animation: bounce 2.5s infinite ease-in-out;
}

.hero-title {
  font-size: 44rpx;
  font-weight: 800;
  color: var(--text-main);
  margin-bottom: 16rpx;
  text-align: center;
}

.hero-subtitle {
  font-size: 32rpx;
  color: var(--text-light);
  font-weight: 500;
  text-align: center;
}

/* Daily Challenge Card */
.daily-challenge-card {
  display: flex;
  align-items: center;
  background: #58cc02;
  border-radius: 32rpx;
  padding: 32rpx 40rpx;
  margin: 0 40rpx 48rpx;
  position: relative;
  box-shadow: 0 8rpx 0 #46a302;
  transition: all 0.1s ease;
  width: calc(100% - 80rpx);
  box-sizing: border-box;
}

.daily-challenge-card:active, .active-state {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 0 #46a302;
}


.challenge-badge {
  position: absolute;
  top: -20rpx;
  right: 40rpx;
  background: #ff4b4b;
  color: white;
  font-size: 24rpx;
  font-weight: 800;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 0 #d33131;
  z-index: 10;
}

.challenge-icon {
  font-size: 72rpx;
  margin-right: 32rpx;
}

.challenge-info {
  flex: 1;
}

.challenge-title {
  font-size: 36rpx;
  font-weight: 800;
  color: white;
  display: block;
}

.challenge-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 4rpx;
  font-weight: 500;
}

.challenge-arrow {
  font-size: 40rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 800;
}

.action-area {
  width: 100%;
  padding: 0 40rpx;
  margin-bottom: 64rpx;
  box-sizing: border-box;
}

.action-row {
  display: flex;
  gap: 16rpx;
}

.today-suggestions {
  width: 100%;
  padding: 0 40rpx;
  margin-bottom: 40rpx;
  box-sizing: border-box;
}

.suggestion-stats-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.suggestion-stat-item {
  flex: 1;
  background: #f6f9ff;
  border-radius: 20rpx;
  padding: 16rpx;
  text-align: center;
}

.suggestion-stat-value {
  display: block;
  font-size: 34rpx;
  color: #1b6ef3;
  font-weight: 800;
}

.suggestion-stat-label {
  display: block;
  margin-top: 4rpx;
  color: var(--text-light);
  font-size: 22rpx;
}

.recommended-topic {
  margin-bottom: 20rpx;
}

.recommended-topic-title {
  display: block;
  font-size: 30rpx;
  color: var(--text-main);
  font-weight: 700;
}

.recommended-topic-desc {
  display: block;
  margin-top: 8rpx;
  color: var(--text-light);
  font-size: 24rpx;
}

.chapter-list {
  margin-bottom: 20rpx;
}

.wrong-review-entry {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: 999rpx;
  background: #fff4de;
  border: 1rpx solid #ffd38a;
  padding: 10rpx 20rpx;
  margin-bottom: 18rpx;
}

.wrong-review-entry-label {
  font-size: 24rpx;
  font-weight: 700;
  color: #b54708;
}

.chapter-item {
  padding: 14rpx 0;
  border-top: 1rpx solid #ececec;
}

.chapter-item:first-child {
  border-top: none;
}

.chapter-item-title {
  display: block;
  font-size: 26rpx;
  color: var(--text-main);
}

.chapter-item-meta {
  display: block;
  margin-top: 4rpx;
  font-size: 22rpx;
  color: var(--text-light);
}

.today-cta-row {
  display: flex;
  gap: 12rpx;
}

.today-btn {
  flex: 1;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 700;
  height: 72rpx;
  line-height: 72rpx;
  color: #2b3a55;
  background: #eef2f8;
  padding: 0;
}

.today-btn.primary {
  flex: 2;
  color: #ffffff;
  background: #1b6ef3;
}

.btn {
  width: 100%;
  font-size: 36rpx;
  font-weight: 800;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.action-row .btn {
  flex: 1;
}

.btn.secondary {
  color: #2b3a55;
  background: #eef2f8;
}

.daily-goals {
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.card {
  background: var(--bg-color);
  border: 4rpx solid #e5e5e5;
  border-bottom: 10rpx solid #e5e5e5;
  border-radius: 32rpx;
  padding: 32rpx;
  width: 100%;
  margin: 0;
  box-sizing: border-box;
}

.card-title {
  font-weight: 800;
  font-size: 36rpx;
  color: var(--text-main);
  display: block;
  margin-bottom: 24rpx;
}

.progress-bar {
  height: 32rpx;
  background-color: #e5e5e5;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #ffc800;
  border-radius: 16rpx;
  transition: width 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.card-desc {
  font-size: 28rpx;
  color: var(--text-light);
  font-weight: 500;
  line-height: 1.4;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}

/* Loading State */
.loading-state {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: white;
  z-index: 1000;
}

.spinner {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid #e5e5e5;
  border-top-color: #58cc02;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}
