/* pages/lesson/lesson.wxss */
.result-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.result-emoji {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.result-title {
  font-size: 52rpx;
  font-weight: 800;
  color: var(--primary-color);
  margin-bottom: 60rpx;
  text-align: center;
}

.empty-desc {
  margin: 12rpx 0 40rpx;
  font-size: 28rpx;
  color: var(--text-light);
  line-height: 1.5;
  text-align: center;
}

.stat-row {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-bottom: 80rpx;
  background: #f8fafc;
  padding: 40rpx 0;
  border-radius: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-label {
  color: var(--text-light);
  font-size: 24rpx;
  text-transform: uppercase;
  letter-spacing: 1px;
  margin-top: 8rpx;
}

.stat-val {
  font-size: 52rpx;
  font-weight: bold;
}

.stat-val.xp {
  color: var(--warning-color);
}

.wrong-completion-wrap {
  width: 100%;
}

.wrong-completion-stats {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.wrong-completion-item {
  flex: 1;
  background: #f8fafc;
  border-radius: 18rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.wrong-completion-value {
  font-size: 48rpx;
  font-weight: 800;
  color: var(--text-main);
}

.wrong-completion-value.cleared {
  color: var(--primary-color);
}

.wrong-completion-label {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: var(--text-light);
}

.wrong-next-card {
  width: 100%;
  background: #eef8ff;
  border-radius: 20rpx;
  padding: 20rpx 24rpx;
  margin: 0 0 20rpx;
  box-sizing: border-box;
}

.wrong-next-title {
  display: block;
  font-size: 24rpx;
  font-weight: 800;
  color: #1b5f8a;
  margin-bottom: 6rpx;
}

.wrong-next-desc {
  display: block;
  font-size: 24rpx;
  color: #2f5f80;
  line-height: 1.5;
}

/* Quiz Styles */
.quiz-header {
  width: 100%;
  padding: 20rpx 24rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.btn {
  width: 100%;
  padding: 28rpx;
  font-size: 34rpx;
  border-radius: 24rpx;
  font-weight: 800;
  transition: all 0.1s ease;
  box-sizing: border-box;
}

.close-btn {
  font-size: 44rpx;
  color: var(--text-light);
  padding: 12rpx;
  margin-right: 16rpx;
  min-width: 72rpx;
  text-align: center;
}

.quiz-progress-bar {
  flex: 1;
  height: 18rpx;
  background-color: #eaeaea;
  border-radius: 999rpx;
  overflow: hidden;
}

.quiz-progress-fill {
  height: 100%;
  background-color: var(--primary-color);
  transition: width 0.25s ease;
  border-radius: 999rpx;
}

.quiz-progress-text {
  margin-left: 16rpx;
  font-size: 24rpx;
  color: var(--text-light);
  font-weight: 800;
  min-width: 110rpx;
  text-align: right;
}

.wrong-review-banner {
  width: 100%;
  padding: 0 40rpx 8rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.wrong-review-title {
  font-size: 28rpx;
  font-weight: 800;
  color: #b54708;
}

.wrong-review-count {
  font-size: 24rpx;
  color: #b54708;
  background: #fff4de;
  border-radius: 999rpx;
  padding: 8rpx 16rpx;
}

.question-area {
  padding: 24rpx 40rpx 10rpx;
  width: 100%;
  box-sizing: border-box;
}

.question-header-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 20rpx;
  margin-bottom: 10rpx;
}

.question-main {
  flex: 1;
}

.detail-toggle {
  display: flex;
  align-items: center;
  background: #f0f0f0;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.toggle-icon {
  font-size: 28rpx;
  margin-right: 6rpx;
}

.toggle-text {
  font-size: 22rpx;
  font-weight: 800;
  color: #1cb0f6;
}

.description-card {
  background: #f8f9fa;
  border-left: 8rpx solid #1cb0f6;
  padding: 20rpx;
  border-radius: 8rpx;
  margin: 16rpx 0;
}

.description-content {
  font-size: 26rpx;
  color: #4b4b4b;
  line-height: 1.6;
  white-space: pre-wrap;
}

.question-text {
  font-size: 36rpx;
  font-weight: 800;
  color: var(--text-main);
  line-height: 1.5;
  display: block;
}

.track-tag {
  margin-top: 12rpx;
  display: inline-block;
  font-size: 22rpx;
  font-weight: 800;
  border-radius: 999rpx;
  padding: 4rpx 14rpx;
}

.track-tag.core {
  color: #1f7a1f;
  background: #e7f7dd;
}

.track-tag.extra {
  color: #6f4f17;
  background: #fff4dc;
}

.code-container {
  margin-top: 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
  border: 2rpx solid #e5e5e5;
}

.lang-selector {
  display: flex;
  background: #f0f0f0;
  padding: 8rpx;
  gap: 8rpx;
}

.lang-tab {
  font-size: 20rpx;
  font-weight: 800;
  color: #777;
  padding: 6rpx 16rpx;
  border-radius: 10rpx;
  text-transform: uppercase;
}

.lang-tab.active {
  background: white;
  color: #1cb0f6;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.code-block {
  background-color: #2d2d2d;
  color: #f8f8f2;
  padding: 22rpx;
  font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace;
  font-size: 26rpx;
  line-height: 1.6;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
}

.options-area {
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
  flex: 1;
}

.option-card {
  display: flex;
  align-items: center;
  padding: 26rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 20rpx;
  margin-bottom: 18rpx;
  background-color: #fff;
  transition: transform 0.08s ease, box-shadow 0.08s ease, border-color 0.12s ease;
  box-shadow: 0 2rpx 0 rgba(0,0,0,0.03);
}

.option-card:active {
  transform: translateY(2rpx);
  background-color: #f0f0f0;
}

.option-card.selected {
  border-color: var(--secondary-color);
  background-color: #eaf5ff;
  transform: translateY(2rpx);
  box-shadow: none;
}

.option-card.correct {
  border-color: var(--primary-color);
  background-color: #d7ffb8;
}

.option-card.wrong {
  border-color: var(--error-color);
  background-color: #ffdfe0;
}

.option-key {
  border: 2rpx solid #e5e5e5;
  color: var(--text-light);
  width: 56rpx;
  height: 56rpx;
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 22rpx;
  font-size: 26rpx;
  font-weight: 800;
  background: #f7f7f7;
}

.option-card.selected .option-key {
  border-color: var(--secondary-color);
  color: white;
  background: var(--secondary-color);
}

.option-text {
  font-size: 30rpx;
  color: var(--text-main);
  line-height: 1.4;
}

.footer {
  width: 100%;
  padding: 22rpx 40rpx;
  padding-bottom: calc(22rpx + env(safe-area-inset-bottom));
  border-top: 2rpx solid #f0f0f0;
  background-color: #fff;
  box-sizing: border-box;
}

.footer-correct {
  background-color: #d7ffb8;
  border-color: #b8f28b;
}

.footer-wrong {
  background-color: #ffdfe0;
  border-color: #ffc1c1;
}

/* fixed height area to avoid layout jump */
.feedback-wrap {
  min-height: 140rpx;
}

.feedback-msg {
  margin-bottom: 16rpx;
}

.feedback-title {
  font-weight: 900;
  font-size: 34rpx;
  margin-bottom: 8rpx;
}

.feedback-desc {
  font-size: 26rpx;
  color: rgba(0,0,0,0.55);
  line-height: 1.4;
}

.thinking-card {
  margin-top: 12rpx;
  padding: 16rpx;
  border-radius: 14rpx;
  background: rgba(255, 255, 255, 0.55);
}

.thinking-item {
  margin-top: 6rpx;
  line-height: 1.4;
}

.thinking-label {
  font-size: 24rpx;
  color: #4b4b4b;
  font-weight: 800;
  display: block;
}

.thinking-value {
  font-size: 24rpx;
  color: rgba(0,0,0,0.65);
}

.template-box {
  background: #2d2d2d;
  color: #f8f8f2;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  margin-top: 10rpx;
  overflow-x: auto;
  border: 1rpx solid rgba(255,255,255,0.1);
}

.template-text {
  font-family: 'Courier New', Courier, monospace;
  font-size: 22rpx;
  line-height: 1.5;
  white-space: pre;
  display: block;
  color: #f1fa8c; /* Make it distinct */
}

.footer-correct .feedback-title { color: #2e7d32; }
.footer-wrong .feedback-title { color: var(--error-color); }

.btn {
  width: 100%;
  padding: 28rpx;
  font-size: 34rpx;
  border-radius: 24rpx;
  font-weight: 800;
  transition: all 0.1s ease;
}

.btn:active:not(.disabled) {
  transform: translateY(4rpx);
  box-shadow: none !important;
}

.btn.disabled {
  background-color: #e5e5e5;
  color: #afafaf;
  box-shadow: none;
}

.btn-secondary {
  margin-top: 16rpx;
  background: #ffffff;
  color: var(--text-main);
  border: 2rpx solid #d6dce6;
}
