/* pages/path/path.wxss */
.container {
  min-height: 100vh;
  background-color: #ffffff;
}

.path-header {
  padding: 48rpx 40rpx 64rpx;
  background: linear-gradient(180deg, #f0f7ff 0%, #ffffff 100%);
  border-bottom: 4rpx solid #e5e5e5;
  position: relative;
  overflow: hidden;
}

/* Decoration Shapes */
.header-decoration-circle {
  position: absolute;
  border-radius: 50%;
  opacity: 0.6;
  z-index: 0;
}

.circle-1 {
  width: 120rpx;
  height: 120rpx;
  background: #ffecb3; /* Light amber */
  top: -40rpx;
  right: -20rpx;
}

.circle-2 {
  width: 60rpx;
  height: 60rpx;
  background: #c8e6c9; /* Light green */
  bottom: 40rpx;
  left: -20rpx;
}

.header-text-group {
  margin-bottom: 40rpx;
  position: relative;
  z-index: 1;
}

.title-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.path-title-badge {
  background: #58cc02;
  padding: 12rpx 32rpx;
  border-radius: 40rpx;
  border: 4rpx solid #46a302;
  box-shadow: 0 6rpx 0 #46a302;
  margin-right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.path-title {
  font-size: 44rpx;
  font-weight: 800;
  color: #ffffff;
  letter-spacing: 1rpx;
  text-shadow: 0 2rpx 0 rgba(0,0,0,0.1);
}

.header-mascot {
  font-size: 64rpx;
  animation: float 3s ease-in-out infinite;
  filter: drop-shadow(0 4rpx 0 rgba(0,0,0,0.1));
}

.path-subtitle {
  font-size: 28rpx;
  color: #78909c;
  font-weight: 700;
  display: block;
  letter-spacing: 1rpx;
  margin-left: 8rpx;
}

/* Speech Bubble Hint */
.path-hint-container {
  position: relative;
  z-index: 1;
  margin-top: 16rpx;
  padding-left: 8rpx;
}

.path-hint-bubble {
  display: inline-block;
  background: #fff;
  border: 4rpx solid #e5e5e5;
  border-radius: 24rpx;
  box-shadow: 0 6rpx 0 #e5e5e5;
  position: relative;
  max-width: 90%;
}

.hint-content {
  display: flex;
  align-items: center;
  padding: 20rpx 28rpx;
}

.bubble-tail {
  position: absolute;
  top: -16rpx;
  left: 60rpx;
  width: 24rpx;
  height: 24rpx;
  background: #fff;
  border-left: 4rpx solid #e5e5e5;
  border-top: 4rpx solid #e5e5e5;
  transform: rotate(45deg);
}

.hint-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.hint-text {
  font-size: 26rpx;
  color: #4b4b4b;
  font-weight: 700;
  line-height: 1.4;
}

.path-scroll {
  height: calc(100vh - 200rpx);
}

.path-container {
  padding: 40rpx;
  padding-bottom: 80rpx;
  position: relative;
}

.path-line {
  position: absolute;
  left: 100rpx;
  top: 60rpx;
  bottom: 80rpx;
  width: 12rpx;
  background: #e5e5e5;
  border-radius: 6rpx;
  z-index: 0;
}

.topic-item {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 32rpx;
  background: white;
  border-radius: 32rpx;
  border: 4rpx solid #e5e5e5;
  border-bottom: 10rpx solid #e5e5e5;
  transition: all 0.1s ease;
  position: relative;
  z-index: 1;
  box-sizing: border-box;
}

.topic-item:active, .topic-active {
  transform: translateY(4rpx);
  border-bottom-width: 6rpx;
}


.topic-item.completed {
  border-color: #58cc02;
  border-bottom-color: #46a302;
}

.topic-item.mastered {
  border-color: #ffc800;
  border-bottom-color: #e5a500;
  background: #fffdf0;
}

.progress-badge {
  position: absolute;
  top: -20rpx;
  right: 40rpx;
  background: #58cc02;
  color: white;
  font-size: 24rpx;
  font-weight: 800;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  z-index: 2;
  box-shadow: 0 4rpx 0 #46a302;
}

.topic-item.mastered .progress-badge {
  background: #ffc800;
  box-shadow: 0 4rpx 0 #e5a500;
}

.topic-icon-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 32rpx;
  position: relative;
}

.topic-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 0 rgba(0, 0, 0, 0.1);
}

.topic-emoji {
  font-size: 64rpx;
}

.topic-content {
  flex: 1;
  min-width: 0;
}

.topic-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  flex-wrap: wrap;
}

.topic-title {
  font-size: 36rpx;
  font-weight: 800;
  color: var(--text-main);
  margin-right: 16rpx;
}

.level-badge {
  font-size: 22rpx;
  font-weight: 800;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  text-transform: uppercase;
}

.level-1 {
  background: #e8f5e9;
  color: #2e7d32;
}

.level-2 {
  background: #fff3e0;
  color: #ef6c00;
}

.level-3 {
  background: #fce4ec;
  color: #c2185b;
}

.topic-desc {
  font-size: 28rpx;
  color: var(--text-light);
  line-height: 1.4;
  display: block;
  font-weight: 500;
}

.topic-progress {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
}

.track-progress-row {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-top: 12rpx;
}

.track-progress-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 4rpx;
}

.track-progress {
  font-size: 22rpx;
  font-weight: 800;
  border-radius: 999rpx;
  padding: 4rpx 16rpx;
}

.track-progress.core {
  color: #1f7a1f;
  background: #e7f7dd;
}

.track-progress.extra {
  color: #6f4f17;
  background: #fff4dc;
}

.track-progress-remaining {
  font-size: 20rpx;
  color: var(--text-light);
  font-weight: 600;
  margin-left: 8rpx;
}

.progress-track {
  flex: 1;
  height: 16rpx;
  background: #e5e5e5;
  border-radius: 8rpx;
  overflow: hidden;
  margin-right: 16rpx;
}

.progress-fill {
  height: 100%;
  border-radius: 8rpx;
  transition: width 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.progress-text {
  font-size: 24rpx;
  color: var(--text-light);
  font-weight: 800;
  min-width: 80rpx;
}

.topic-arrow {
  color: #afafaf;
  font-size: 40rpx;
  font-weight: 800;
  margin-left: 16rpx;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  width: 100%;
  text-align: center;
  box-sizing: border-box;
}

.empty-icon {
  font-size: 160rpx;
  margin-bottom: 40rpx;
  animation: float 3s infinite ease-in-out;
}

.empty-title {
  font-size: 44rpx;
  font-weight: 800;
  color: var(--text-main);
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 32rpx;
  color: var(--text-light);
  line-height: 1.6;
  font-weight: 500;
}

/* Path Reward */
.path-reward {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
  margin: 40rpx;
  background: #fffdf0;
  border-radius: 40rpx;
  border: 4rpx solid #ffc800;
  border-bottom: 12rpx solid #ffc800;
}

.reward-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  animation: bounce 1s infinite;
}

.reward-text {
  font-size: 40rpx;
  font-weight: 800;
  color: #ffc800;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-30rpx); }
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-15rpx); }
}
