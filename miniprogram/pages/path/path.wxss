/* pages/path/path.wxss */
.container {
  min-height: 100vh;
  background-color: #ffffff;
}

.path-header {
  padding: 48rpx 40rpx;
  background: white;
  border-bottom: 4rpx solid #e5e5e5;
}

.path-title {
  font-size: 48rpx;
  font-weight: 800;
  color: var(--text-main);
  display: block;
}

.path-subtitle {
  font-size: 32rpx;
  color: var(--text-light);
  margin-top: 12rpx;
  font-weight: 500;
}

.path-scroll {
  height: calc(100vh - 200rpx);
}

.path-container {
  padding: 40rpx;
  padding-bottom: 80rpx;
  position: relative;
}

.path-line {
  position: absolute;
  left: 100rpx;
  top: 60rpx;
  bottom: 80rpx;
  width: 12rpx;
  background: #e5e5e5;
  border-radius: 6rpx;
  z-index: 0;
}

.topic-item {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 32rpx;
  background: white;
  border-radius: 32rpx;
  border: 4rpx solid #e5e5e5;
  border-bottom: 10rpx solid #e5e5e5;
  transition: all 0.1s ease;
  position: relative;
  z-index: 1;
  box-sizing: border-box;
}

.topic-item:active, .topic-active {
  transform: translateY(4rpx);
  border-bottom-width: 6rpx;
}


.topic-item.completed {
  border-color: #58cc02;
  border-bottom-color: #46a302;
}

.topic-item.mastered {
  border-color: #ffc800;
  border-bottom-color: #e5a500;
  background: #fffdf0;
}

.progress-badge {
  position: absolute;
  top: -20rpx;
  right: 40rpx;
  background: #58cc02;
  color: white;
  font-size: 24rpx;
  font-weight: 800;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  z-index: 2;
  box-shadow: 0 4rpx 0 #46a302;
}

.topic-item.mastered .progress-badge {
  background: #ffc800;
  box-shadow: 0 4rpx 0 #e5a500;
}

.topic-icon-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 32rpx;
  position: relative;
}

.topic-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 0 rgba(0, 0, 0, 0.1);
}

.topic-emoji {
  font-size: 64rpx;
}

.topic-content {
  flex: 1;
  min-width: 0;
}

.topic-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  flex-wrap: wrap;
}

.topic-title {
  font-size: 36rpx;
  font-weight: 800;
  color: var(--text-main);
  margin-right: 16rpx;
}

.level-badge {
  font-size: 22rpx;
  font-weight: 800;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  text-transform: uppercase;
}

.level-1 {
  background: #e8f5e9;
  color: #2e7d32;
}

.level-2 {
  background: #fff3e0;
  color: #ef6c00;
}

.level-3 {
  background: #fce4ec;
  color: #c2185b;
}

.topic-desc {
  font-size: 28rpx;
  color: var(--text-light);
  line-height: 1.4;
  display: block;
  font-weight: 500;
}

.topic-progress {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
}

.progress-track {
  flex: 1;
  height: 16rpx;
  background: #e5e5e5;
  border-radius: 8rpx;
  overflow: hidden;
  margin-right: 16rpx;
}

.progress-fill {
  height: 100%;
  border-radius: 8rpx;
  transition: width 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.progress-text {
  font-size: 24rpx;
  color: var(--text-light);
  font-weight: 800;
  min-width: 80rpx;
}

.topic-arrow {
  color: #afafaf;
  font-size: 40rpx;
  font-weight: 800;
  margin-left: 16rpx;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  width: 100%;
  text-align: center;
  box-sizing: border-box;
}

.empty-icon {
  font-size: 160rpx;
  margin-bottom: 40rpx;
  animation: float 3s infinite ease-in-out;
}

.empty-title {
  font-size: 44rpx;
  font-weight: 800;
  color: var(--text-main);
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 32rpx;
  color: var(--text-light);
  line-height: 1.6;
  font-weight: 500;
}

/* Path Reward */
.path-reward {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
  margin: 40rpx;
  background: #fffdf0;
  border-radius: 40rpx;
  border: 4rpx solid #ffc800;
  border-bottom: 12rpx solid #ffc800;
}

.reward-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  animation: bounce 1s infinite;
}

.reward-text {
  font-size: 40rpx;
  font-weight: 800;
  color: #ffc800;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-30rpx); }
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-15rpx); }
}

