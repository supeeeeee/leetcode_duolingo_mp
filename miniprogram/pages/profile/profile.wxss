/* pages/profile/profile.wxss */
.container {
  min-height: 100vh;
  background-color: #fcfcfc; /* Warmer background */
  padding: 32rpx;
  padding-bottom: 100rpx;
  display: block;
  width: 100%;
  box-sizing: border-box;
}

/* Common Section Styles */
.section-container {
  margin-top: 56rpx;
  width: 100%;
  box-sizing: border-box;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  letter-spacing: 0.5rpx;
}

.section-subtitle {
  font-size: 26rpx;
  color: #afafaf;
  font-weight: 600;
}

.section-subtitle.has-wrong {
  color: #ff9600; /* Emphasis when > 0 */
  font-weight: 700;
}

.review-entry-meta {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 2rpx;
}

.review-entry-remain {
  font-size: 20rpx;
  color: #d1d1d1;
  font-weight: 600;
}

/* Profile Card */
.profile-card {
  background: white;
  border-radius: 32rpx;
  padding: 40rpx;
  border: 2rpx solid #f0f0f0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
  width: 100%;
  box-sizing: border-box;
}

.profile-main {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  width: 100%;
}

.avatar-box {
  position: relative;
  margin-right: 32rpx;
  flex-shrink: 0;
}

.avatar-ring {
  width: 144rpx;
  height: 144rpx;
  background: #58cc02;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 6rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(88, 204, 2, 0.2);
}

.avatar-emoji {
  font-size: 72rpx;
}

.level-badge {
  position: absolute;
  bottom: -4rpx;
  right: -4rpx;
  background: #ff9600;
  color: white;
  font-size: 22rpx;
  font-weight: 700;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  border: 4rpx solid white;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.user-info {
  flex: 1;
  min-width: 0;
}

.name-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.username {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.share-btn {
  background: white !important;
  padding: 0 !important;
  margin: 0 !important;
  width: 64rpx !important;
  height: 64rpx !important;
  display: flex !important;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx !important;
  border: 2rpx solid #f0f0f0 !important;
  box-shadow: 0 2rpx 0 #f0f0f0;
  flex-shrink: 0;
}

.share-btn:active {
  transform: translateY(2rpx);
  box-shadow: none;
}

.share-icon {
  font-size: 32rpx;
}

.join-date {
  font-size: 26rpx;
  color: #afafaf;
  margin-top: 8rpx;
  display: block;
}

/* XP Section */
.xp-section {
  padding-top: 32rpx;
  border-top: 2rpx solid #f5f5f5;
}

.xp-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
  align-items: baseline;
}

.xp-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #555;
}

.xp-detail {
  font-size: 26rpx;
  color: #58cc02;
  font-weight: 700;
}

.progress-track {
  height: 24rpx;
  background: #f0f0f0;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.progress-fill {
  height: 100%;
  background: #58cc02;
  border-radius: 12rpx;
  transition: width 1s ease;
}

.xp-tip {
  font-size: 22rpx;
  color: #afafaf;
  text-align: center;
  display: block;
  font-weight: 600;
}

/* Stats Grid */
.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  width: 100%;
}

.stat-item {
  background: white;
  padding: 32rpx 28rpx;
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  border: 2rpx solid #f0f0f0;
  box-shadow: 0 4rpx 0 #f0f0f0;
  transition: all 0.1s ease;
  box-sizing: border-box;
}

.stat-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 0 #f0f0f0;
}

.stat-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.stat-info {
  display: flex;
  flex-direction: column;
}

.stat-value {
  font-size: 34rpx;
  font-weight: 700;
  color: #333;
  line-height: 1.1;
}

.stat-label {
  font-size: 20rpx;
  color: #afafaf;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  margin-top: 6rpx;
}

/* Specific colors for stats - subtle borders */
.streak-card { border-color: #fff0d6; box-shadow: 0 4rpx 0 #ffe6b3; }
.questions-card { border-color: #e0f2fe; box-shadow: 0 4rpx 0 #bae6fd; }
.accuracy-card { border-color: #ffe4e6; box-shadow: 0 4rpx 0 #fecdd3; }
.xp-total-card { border-color: #f3e8ff; box-shadow: 0 4rpx 0 #e9d5ff; }

.review-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 24rpx;
  background: #1cb0f6;
  color: white;
  font-size: 30rpx;
  font-weight: 700;
  border-bottom: 4rpx solid #1899d6;
  transition: all 0.1s;
}

.review-btn:active {
  transform: translateY(2rpx);
  border-bottom-width: 2rpx;
}

/* Activity Chart */
.activity-box {
  background: white;
  border-radius: 32rpx;
  padding: 40rpx 24rpx;
  border: 2rpx solid #f0f0f0;
  box-shadow: 0 4rpx 0 #f0f0f0;
  width: 100%;
  box-sizing: border-box;
}

.chart-area {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: 180rpx;
  padding: 0 8rpx;
}

.chart-column {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.bar-wrapper {
  height: 140rpx;
  width: 32rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  display: flex;
  align-items: flex-end;
  overflow: hidden;
}

.bar-fill {
  width: 100%;
  background: #e0e0e0;
  border-radius: 16rpx;
  transition: height 0.6s ease;
}

.bar-fill.active {
  background: #58cc02;
}

.day-text {
  font-size: 22rpx;
  font-weight: 600;
  color: #afafaf;
  margin-top: 16rpx;
}

/* Achievements */
.view-all {
  font-size: 26rpx;
  color: #1cb0f6;
  font-weight: 700;
}

.achievements-scroll {
  display: flex;
  flex-direction: row;
  height: 220rpx;
  padding: 8rpx 0;
  width: 100%;
}

.badge-item {
  flex-shrink: 0;
  width: 160rpx;
  height: 170rpx;
  background: white;
  border-radius: 28rpx;
  margin-right: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #f0f0f0;
  box-shadow: 0 4rpx 0 #f0f0f0;
  position: relative;
  transition: all 0.2s ease;
}

.badge-item:last-child {
  margin-right: 32rpx;
}

.badge-item:active {
  transform: scale(0.98);
  box-shadow: none;
}

.badge-icon {
  font-size: 64rpx;
  margin-bottom: 10rpx;
}

.badge-name {
  font-size: 20rpx;
  font-weight: 700;
  color: #555;
  text-align: center;
  padding: 0 8rpx;
  line-height: 1.2;
}

.badge-item.locked {
  background: #fafafa;
  filter: grayscale(1);
  opacity: 0.7;
}

.lock-overlay {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
}

.lock-icon {
  font-size: 20rpx;
}

/* Modal */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(4px);
}

.modal-content {
  width: 75%;
  background: white;
  border-radius: 40rpx;
  padding: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 2rpx solid #f0f0f0;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.1);
  animation: modalPop 0.3s ease-out;
}

@keyframes modalPop {
  0% { transform: scale(0.9); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}

.modal-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 16rpx;
}

.modal-desc {
  font-size: 26rpx;
  color: #666;
  text-align: center;
  margin-bottom: 32rpx;
  line-height: 1.4;
}

.modal-status {
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
  margin-bottom: 32rpx;
}

.status-unlocked { background: #eaf9e1; color: #58cc02; }
.status-locked { background: #f5f5f5; color: #afafaf; }

.modal-close {
  width: 100% !important;
  background: #1cb0f6;
  color: white;
  border-radius: 24rpx;
  font-weight: 700;
  border-bottom: 4rpx solid #1899d6;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0;
}

.modal-close:active {
  transform: translateY(2rpx);
  border-bottom-width: 2rpx;
}
