/* pages/profile/profile.wxss */
.container {
  min-height: 100vh;
  background-color: var(--bg-color);
  padding-bottom: 80rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* Header Section */
.header-section {
  background: white;
  border-bottom: 4rpx solid #e5e5e5;
  padding: 24rpx 40rpx 48rpx;
  margin-bottom: 40rpx;
}

.profile-header-card {
  display: flex;
  flex-direction: column;
}

.profile-content {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar-container {
  position: relative;
  margin-right: 32rpx;
}

.avatar-ring {
  width: 140rpx;
  height: 140rpx;
  background: #58cc02;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 6rpx solid white;
  box-shadow: 0 6rpx 0 #46a302; /* 3D effect */
}

.avatar-emoji {
  font-size: 72rpx;
}

.level-pill {
  position: absolute;
  bottom: -10rpx;
  right: -10rpx;
  background: #ff9600;
  color: white;
  font-size: 24rpx;
  font-weight: 800;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  border: 4rpx solid white;
  box-shadow: 0 4rpx 0 #e58700;
}

.user-details {
  flex: 1;
  min-width: 0;
}

.name-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.username {
  font-size: 40rpx;
  font-weight: 800;
  color: #3c3c3c;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.share-btn {
  background: white !important;
  padding: 0 !important;
  margin: 0 !important;
  width: 64rpx !important;
  height: 64rpx !important;
  display: flex !important;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx !important;
  border: 4rpx solid #e5e5e5 !important;
  box-shadow: 0 4rpx 0 #e5e5e5;
}

.share-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 0 #e5e5e5;
}

.share-icon {
  font-size: 32rpx;
}

.join-date {
  font-size: 26rpx;
  color: #afafaf;
  font-weight: 700;
  text-transform: uppercase;
}

/* XP Progress */
.xp-container {
  width: 100%;
}

.xp-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.xp-label {
  font-size: 28rpx;
  font-weight: 800;
  color: #3c3c3c;
}

.xp-value {
  font-size: 28rpx;
  font-weight: 800;
  color: #58cc02;
}

.progress-track {
  height: 24rpx;
  background: #e5e5e5;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.progress-fill {
  height: 100%;
  background: #58cc02;
  border-radius: 12rpx;
  transition: width 1s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.xp-next-tip {
  font-size: 24rpx;
  color: #afafaf;
  font-weight: 600;
  text-align: right;
  display: block;
}

/* Common Section */
.section-container {
  padding: 0 40rpx;
  margin-bottom: 48rpx;
  width: 100%;
  box-sizing: border-box;
}

.last-section {
  padding-bottom: 40rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 800;
  color: #3c3c3c;
  margin-bottom: 24rpx;
  display: block;
}

/* Stats Grid */
.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.stat-card {
  background: white;
  border: 4rpx solid #e5e5e5;
  border-radius: 24rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 6rpx 0 #e5e5e5; /* 3D effect */
}

.stat-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.stat-text {
  display: flex;
  flex-direction: column;
}

.stat-num {
  font-size: 32rpx;
  font-weight: 800;
  color: #3c3c3c;
  line-height: 1.2;
}

.stat-lbl {
  font-size: 22rpx;
  color: #afafaf;
  font-weight: 700;
  text-transform: uppercase;
}

/* Specific Stat Colors */
.streak-card .stat-icon { color: #ff9600; }
.xp-card .stat-icon { color: #1cb0f6; }
.total-card .stat-icon { color: #58cc02; }
.accuracy-card .stat-icon { color: #ff4b4b; }

/* Review Card */
.review-card {
  background: white;
  border: 4rpx solid #e5e5e5;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 6rpx 0 #e5e5e5;
  transition: all 0.1s;
}

.active-review {
  border-color: #ff4b4b;
  box-shadow: 0 6rpx 0 #d33131;
}

.active-review .review-icon-box {
  background: #ff4b4b;
  color: white;
}

.empty-review .review-icon-box {
  background: #e5e5e5;
  color: #afafaf;
}

.review-card:active, .card-hover {
  transform: translateY(4rpx);
  box-shadow: 0 2rpx 0 #e5e5e5;
}

.active-review:active {
  box-shadow: 0 2rpx 0 #d33131;
}

.review-icon-box {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.review-emoji {
  font-size: 40rpx;
}

.review-info {
  flex: 1;
}

.review-title {
  font-size: 32rpx;
  font-weight: 800;
  color: #3c3c3c;
  display: block;
}

.review-meta {
  margin-top: 8rpx;
}

.review-badge {
  background: #ff4b4b;
  color: white;
  font-size: 22rpx;
  font-weight: 700;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.review-desc {
  font-size: 24rpx;
  color: #afafaf;
  font-weight: 600;
}

.review-arrow {
  font-size: 24rpx;
  font-weight: 900;
  color: #ff4b4b;
  background: #ffe5e5;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

/* Chart Card */
.card {
  background: white;
  border: 4rpx solid #e5e5e5;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 6rpx 0 #e5e5e5;
}

.chart-area {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: 180rpx;
  margin-bottom: 24rpx;
}

.chart-column {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.bar-wrapper {
  height: 140rpx;
  width: 24rpx;
  background: #f7f7f7;
  border-radius: 12rpx;
  display: flex;
  align-items: flex-end;
  overflow: hidden;
}

.bar-fill {
  width: 100%;
  background: #e5e5e5;
  border-radius: 12rpx;
  min-height: 0;
  transition: height 0.5s ease;
}

.bar-fill.active {
  background: #58cc02;
}

.day-text {
  font-size: 22rpx;
  font-weight: 700;
  color: #afafaf;
  margin-top: 12rpx;
}

.chart-footer {
  text-align: right;
}

.chart-stat {
  font-size: 24rpx;
  color: #afafaf;
  font-weight: 700;
}

/* Achievements */
.achievements-scroll {
  display: flex;
  flex-direction: row;
  height: 260rpx;
  width: 100%;
  /* No padding here to allow full bleed scroll if wanted, but container handles padding */
}

.achievement-item {
  flex-shrink: 0;
  width: 180rpx;
  height: 220rpx;
  background: white;
  border: 4rpx solid #e5e5e5;
  border-radius: 24rpx;
  margin-right: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 0 #e5e5e5;
  position: relative;
  transition: all 0.1s;
}

.achievement-hover {
  transform: translateY(4rpx);
  box-shadow: 0 2rpx 0 #e5e5e5;
}

.achievement-icon-box {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  position: relative;
}

.achievement-emoji {
  font-size: 64rpx;
}

.achievement-name {
  font-size: 24rpx;
  font-weight: 800;
  color: #3c3c3c;
  text-align: center;
  padding: 0 8rpx;
  line-height: 1.2;
}

.achievement-item.locked {
  background: #f7f7f7;
  border-color: #e5e5e5;
  opacity: 0.8;
}

.achievement-item.locked .achievement-emoji {
  filter: grayscale(1);
  opacity: 0.5;
}

.lock-overlay {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background: #e5e5e5;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid white;
}

.lock-icon {
  font-size: 20rpx;
}

.scroll-padding {
  width: 16rpx;
  flex-shrink: 0;
}

/* Modal */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  z-index: 2000;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(4px);
}

.modal-content {
  width: 80%;
  background: white;
  border-radius: 32rpx;
  padding: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 20rpx 40rpx rgba(0,0,0,0.2);
}

.modal-header {
  margin-bottom: 32rpx;
}

.modal-icon {
  font-size: 100rpx;
}

.modal-title {
  font-size: 40rpx;
  font-weight: 800;
  color: #3c3c3c;
  margin-bottom: 16rpx;
  text-align: center;
}

.modal-desc {
  font-size: 28rpx;
  color: #777;
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.modal-status {
  padding: 12rpx 32rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
  font-weight: 800;
  margin-bottom: 40rpx;
  text-transform: uppercase;
}

.status-unlocked {
  background: #eaf9e1;
  color: #58cc02;
}

.status-locked {
  background: #f7f7f7;
  color: #afafaf;
}

.modal-btn {
  width: 100%;
  background: #58cc02;
  color: white;
  font-weight: 800;
  font-size: 32rpx;
  padding: 24rpx;
  border-radius: 24rpx;
  border-bottom: 8rpx solid #46a302;
  box-shadow: 0 4rpx 0 #46a302;
}

.modal-btn:active {
  transform: translateY(4rpx);
  border-bottom-width: 4rpx;
  box-shadow: none;
}
